Import('env')

env_l = env.Clone()

env_l.Append(CPPPATH = ['#/src/core'])

env_l.Append(LIBPATH = ['#/src/core'])
env_l.Append(LIBS = ['core'])

files = [
    'demo.c',
    'demo_song.c',
]

if env['with_jack']:
    files += ['Audio_jack.c']
if env['with_ao']:
    files += ['Audio_ao.c']
if env['with_openal']:
    files += ['Audio_openal.c']

env_l.Program('demo', files)



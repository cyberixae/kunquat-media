Import('env')

Export('env')

if env['enable_tests']:
    SConscript('test/SConscript')

#print 'core: ' + env.Dump('LIBS')

env.Append(CPPPATH = ['#/src/core'])

files = [
    'Real.c',
    'Note_table.c',
    'Reltime.c',
    'Event.c',
    'Event_queue.c',
    'Voice_state.c',
    'Envelope.c',
    'Instrument.c',
    'Instrument_debug.c',
    'Instrument_sine.c',
    'Instrument_pcm.c',
    'File_wavpack.c',
    'Sample.c',
    'Etable.c',
    'Ins_table.c',
    'Voice.c',
    'Voice_pool.c',
    'AAtree.c',
    'Column.c',
    'Channel.c',
    'Order.c',
    'Pat_table.c',
    'Pattern.c',
    'Song.c',
    'Playdata.c',
    'Player.c',
    'Playlist.c',
]

if env['with_jack']:
    files += ['Driver_jack.c']

if env['with_ao']:
    files += ['Driver_ao.c']

if env['with_alsa']:
    files += ['Driver_alsa.c']

env.StaticLibrary('core', files)



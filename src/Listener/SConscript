import time


Import('env')

env_l = env.Clone()

env_l.Append(CPPPATH = ['#/src/core'])
env_l.Append(CPPPATH = ['#/src/Listener'])

env_l.Append(LIBPATH = ['#/src/core'])
env_l.Append(LIBS = ['core'])

files = [
    'Listener.c',
    'Listener_driver.c',
    'Listener_song.c',
    'Listener_ins.c',
    'Listener_ins_pcm.c',
    'Listener_demo.c',
    'Listener_pattern.c',
    'Listener_order.c',
    'Listener_note_table.c',
    'Listener_player.c',
    'utf8.c',
]

env_l.Append(CCFLAGS = ('-DBUILD_TIME=\'"' +
        time.strftime('%Y-%m-%d') + '"\'').split(' '))

env_l.Program('kunquatd', files)


